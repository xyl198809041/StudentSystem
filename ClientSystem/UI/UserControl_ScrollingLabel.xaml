<UserControl x:Class="ClientSystem.UI.UserControl_ScrollingLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClientSystem.UI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Loaded="userControl_Loaded">
    <Grid>
        <TextBlock x:Name="label" HorizontalAlignment="Right" TextAlignment="Right">
            <TextBlock.Effect>
                <DropShadowEffect Color="White" ShadowDepth="0"/>
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
</UserControl>
